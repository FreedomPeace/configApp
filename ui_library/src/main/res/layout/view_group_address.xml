<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="@dimen/vl_px_8"
    android:paddingBottom="@dimen/vl_px_8">

    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="*" />

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/vl_px_20"
        android:gravity="center"
        android:layout_marginStart="0px"
        android:text="标签" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0px"
                android:paddingEnd="@dimen/vl_px_20"
                android:gravity="center"
                android:text="省"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0px"
                android:paddingEnd="@dimen/vl_px_20"
                android:text="市"
                android:gravity="center"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0px"
                android:paddingEnd="@dimen/vl_px_20"
                android:gravity="center"
                android:text="区"
                android:textColorHint="@android:color/darker_gray" />

        </LinearLayout>

        <TextView
            android:id="@+id/addressNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0px"
            android:paddingEnd="@dimen/vl_px_20"
            android:text="详细地址"
            android:gravity="center"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

</LinearLayout>