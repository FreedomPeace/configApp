<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FA"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/vl_px_110"
        android:background="#303E73"
        android:text="信息变更"
        android:gravity="center"
        android:id="@+id/main_title"
        style="@style/TextStyle.White.Size40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:layout_width="@dimen/vl_px_22"
        android:layout_height="@dimen/vl_px_44"
        android:background="@drawable/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_title"
        app:layout_constraintBottom_toBottomOf="@+id/main_title"
        android:layout_marginLeft="@dimen/vl_px_66"
        />
    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/main_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/main_left_menu"
        app:layout_constraintRight_toLeftOf="@+id/main_right_menu"
        android:layout_width="@dimen/vl_px_430"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"
        />
    <android.support.v7.widget.RecyclerView
        android:paddingTop="@dimen/vl_px_120"
        android:paddingLeft="@dimen/vl_px_70"
        app:layout_constraintTop_toBottomOf="@id/main_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/main_left_menu"
        android:id="@+id/main_right_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        />
</android.support.constraint.ConstraintLayout>