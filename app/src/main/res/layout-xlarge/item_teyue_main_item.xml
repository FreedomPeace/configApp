<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/small_business_name"
           android:layout_width="0dp"
           android:layout_height="@dimen/vl_px_88"
           android:layout_weight="1"
           android:gravity="center"
           style="@style/TextStyle.Gray3.Size32"
           tools:text="微信"
           />
       <View
           android:background="@color/separate_line"
           android:layout_width="@dimen/vl_px_1"
           android:layout_height="match_parent"/>
       <LinearLayout
           android:layout_weight="1"
           android:layout_width="0dp"
           android:gravity="center"
           android:layout_height="match_parent">
           <Button
               android:id="@+id/setting"
               style="@style/ButtonStyleBk32"
               android:layout_width="@dimen/vl_px_130"
               android:layout_height="@dimen/vl_px_60"
               android:layout_marginLeft="@dimen/vl_px_60"
               android:text="设  置"
               />
       </LinearLayout>
   </LinearLayout>
    <View
        android:background="@color/separate_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vl_px_1"/>
</LinearLayout>