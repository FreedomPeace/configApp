<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F8FA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/item_txt"
        style="@style/TextStyle.Black.Size32"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/vl_px_84"
        android:gravity="center"
        tools:text="收单业务 （新）"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/vl_px_1"
        app:layout_constraintTop_toBottomOf="@id/item_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/bga_adapter_divider"
        />
    <ImageView
        android:layout_width="@dimen/vl_px_22"
        android:layout_height="@dimen/vl_px_44"
        android:id="@+id/iv_open_close_direct"
        tools:background="@drawable/calendar"
        app:layout_constraintLeft_toRightOf="@id/item_txt"
        app:layout_constraintTop_toTopOf="@+id/item_txt"
        app:layout_constraintBottom_toBottomOf="@+id/item_txt"
        />

</android.support.constraint.ConstraintLayout>