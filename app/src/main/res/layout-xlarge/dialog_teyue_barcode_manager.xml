<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_">
    <TextView
        android:id="@+id/textView11"
        android:layout_width="@dimen/vl_px_30"
        android:layout_height="@dimen/vl_px_30"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/vl_px_40"
        android:layout_marginTop="@dimen/vl_px_62"
        android:background="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_business_name"
        style="@style/TextStyle.Black.Size46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="二维码管理"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="@+id/rv_barcode_machine"
        app:layout_constraintStart_toStartOf="@+id/rv_barcode_machine"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0" />
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="@dimen/vl_px_1600"
        android:layout_height="@dimen/vl_px_70"
        android:layout_marginTop="@dimen/vl_px_50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_business_name">

        <TextView
            style="@style/TextStyle.Gray3.Size30.Center.BGBlue"
            android:layout_width="@dimen/vl_px_486"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="门店名称" />

        <View
            android:layout_width="@dimen/vl_px_2"
            android:layout_height="match_parent"
            android:background="@color/color_list_title" />


        <TextView
            style="@style/TextStyle.Gray3.Size30.Center.BGBlue"
            android:layout_width="@dimen/vl_px_354"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="省" />


        <View
            android:layout_width="@dimen/vl_px_2"
            android:layout_height="match_parent"
            android:background="@color/color_list_title" />
        <TextView
            style="@style/TextStyle.Gray3.Size30.Center.BGBlue"
            android:layout_width="@dimen/vl_px_354"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="市" />

        <View
            android:layout_width="@dimen/vl_px_2"
            android:layout_height="match_parent"
            android:background="@color/color_list_title" />

        <TextView
            style="@style/TextStyle.Gray3.Size30.Center.BGBlue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="终端数量" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_barcode_machine"
        android:layout_width="@dimen/vl_px_1600"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        app:layout_constraintBottom_toTopOf="@+id/ok"
        android:layout_marginBottom="@dimen/vl_px_60"
        />

    <Button
        android:id="@+id/ok"
        style="@style/ButtonStyleWhiteBlueBk"
        android:layout_width="@dimen/vl_px_380"
        android:layout_height="@dimen/vl_px_70"
        android:layout_marginBottom="16dp"
        android:text="确定"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>