<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_business_name"
        style="@style/TextStyle.Black.Size46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vl_px_662"
        android:layout_marginRight="@dimen/vl_px_748"
        android:gravity="center"
        android:text="新增特约业务"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/textView11"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0" />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/tv_business_name"
        android:id="@+id/layout1"
        android:layout_width="@dimen/vl_px_1094"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vl_px_48"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="@dimen/vl_px_200"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/vl_px_26">

            <TextView
                style="@style/TextStyle.Black.Size36"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="选择模板" />
        </LinearLayout>

        <TextView
        android:id="@+id/select_mode"
        style="@style/TextStyle.Gray3.Size32.BoxBorder.DownPic"
        android:layout_width="@dimen/vl_px_892"
        android:layout_height="@dimen/vl_px_60"
        android:hint="请选择模板" />
    </LinearLayout>

    <ImageView
        android:id="@+id/textView11"
        android:layout_width="@dimen/vl_px_48"
        android:layout_height="@dimen/vl_px_48"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/vl_px_40"
        android:layout_marginTop="@dimen/vl_px_62"
        android:src="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_ty_container"
        android:layout_width="@dimen/vl_px_1094"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vl_px_48"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/vl_px_120"
        />


</android.support.constraint.ConstraintLayout>